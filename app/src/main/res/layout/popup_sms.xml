<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup_ele"
    android:background="#444444">

    <RelativeLayout
        android:id="@+id/rl_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/rl_default_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">
        <ImageView
            android:id="@+id/img_def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_default"
            android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_default_app"
                android:layout_below="@+id/img_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App SMS"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@id/rl_default_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

        <ImageView
            android:id="@+id/img_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_sms"
            android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv_sms_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_below="@+id/img_device"/>

            </RelativeLayout>

    </RelativeLayout>

</LinearLayout>